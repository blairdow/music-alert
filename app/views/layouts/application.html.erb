<!DOCTYPE html>
<html>
<head>
  <title>MusicAlert</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p>
    <% if current_user %>
        Welcome, <%= current_user.first_name %> | <%= link_to "Log Out", session_path('dummy'), method: :delete %>
    <% else %>
        <%= link_to 'Log In', login_path %> | <%= link_to 'Sign Up', new_user_path %>
    <% end %>
</p>

<%= yield %>

</body>
</html>
