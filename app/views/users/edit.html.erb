<% if current_user && (current_user.id == @user.id) %>
<div class="col-sm-10 col-sm-offset-1">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="text-center">Edit Profile</h1>
        </div>
        <div class="panel-body">
            <%= form_for @user, url: user_path(@user), method: :patch, html: { class: 'form-horizontal' } do |f| %>

                <% @user.errors.full_messages.each do |message| %>
                    <p class="text-danger"><strong><%= message %></strong></p>
                <% end %>

                <div class="form-group">
                    <%= f.label 'First Name: ', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :first_name, class: 'form-control' %>
                    </div>
                </div>   
                <div class="form-group">
                    <%= f.label 'Last Name: ', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :last_name, class: 'form-control' %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :profile_photo, class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.file_field :profile_photo, class: 'form-control' %>
                    </div>
                </div>
        <!--
                <div class="field">
                    <#%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %> 
                </div>
        -->
                <div class="form-group">
                    <%= f.label 'What time does your morning commute start? ', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.time_field :morning_commute, class: 'form-control' %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label 'What time does your evening commute start? ', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.time_field :evening_commute, class: 'form-control' %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label 'Email: ', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.email_field :email, class: 'form-control' %>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= button_tag(type: 'submit', class: "btn btn-block btn-info") do %>
                            <i class="icon-ok icon-white"></i> Save changes
                        <% end %>
                    </div>
                </div>
                
                <!--LINK TO cancel-->
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= link_to user_path(current_user.id) do %>
                            <button type='button' class='btn btn-block btn-default btn-xs login-link'>Cancel</button>
                        <% end %>
                    </div>
                </div>

                
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= link_to change_password_path do %>
                            <button type='button' class='btn btn-block btn-default login-link'>Change password?</button>
                        <% end %>
                    </div>
                </div> 
            <% end %>
          
        </div>
    </div>    
</div>        
         
  
    <% elsif current_user %>
        <div class="col-sm-6 col-sm-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    Whoops, you can't edit someone else's profile! 
                    <div>
                        <%= link_to 'Go back to my page', user_path(current_user.id) %>
                    </div>
                </div>
            </div>
        </div> 
<% end %>
