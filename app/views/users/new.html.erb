
    <div class="page-header">
        <h1 class='text-center'>Welcome to Music Alert</h1>
            <div class="text-center">The app that's like that one friend who is always asking if you've listened to that new song yet. <br>Join us and get daily email reminders to listen to songs/artists/albums on your list!</div>
    </div>

    <h2 class='text-center'>Sign up!</h2>
    
<!--SIGN UP FORM-->
<div class="row">
    <div class="col-sm-10 col-md-7 col-md-offset-2">
    <%= form_for @user, html: { multipart: true, class: 'form-horizontal' } do |f| %>
            <!--ERROR HANDLING-->
            <% if @user.errors.any? %>
               <div class="text-danger">
                   <h4 class='text-center'>Form is invalid</h4>
                   <ul>
                       <% for message in @user.errors.full_messages %>
                           <li><%= message %></li>
                       <% end %>
                   </ul>
               </div>
            <% end %>

            <div class="form-group">
                <%= f.label :first_name, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                    <%= f.text_field :first_name, class: 'form-control' %>
                </div>
            </div>   
            <div class="form-group">
                <%= f.label :last_name, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                    <%= f.text_field :last_name, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :profile_photo, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">    
                    <%= f.file_field :profile_photo, class: 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :morning_commute, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">    
                    <%= f.time_field :morning_commute, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :evening_commute, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">    
                    <%= f.time_field :evening_commute, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :email, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">    
                    <%= f.email_field :email, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">    
                    <%= f.password_field :password, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">    
                    <%= f.password_field :password_confirmation, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit value:'Sign Up', class: 'btn btn-block btn-info' %>
                </div>
            </div>

            <!--LINK TO LOG IN-->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= link_to login_path do %>
                        <button type='button' class='btn btn-block btn-default btn-xs login-link'>or Log In here</button>
                    <% end %>
                </div>
            </div>
            
        <% end %>
    </div>   

</div>

