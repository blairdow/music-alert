

<div class="wrapper">
    <h1 class='hero'>Search results</h1>

  
        <% @users.each do |user| %>
            <%= image_tag user.profile_photo.url(:thumb), class: 'img-circle' %>
            <%= link_to user.full_name, user_path(user), class: 'follow-item' %>
        <br>        
        <% end %>
    

    <% if @users.blank? %>
      <h4>Whoops! No user with the name <%= params[:search] %>.</h4>
    <% end %>
    
</div>