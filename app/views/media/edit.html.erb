<h1>Edit a music!</h1>

    <%= form_for @medium, url: user_medium_path(@medium.user_id, @medium), method: :patch do |f| %>
         
      <div class="row">
        <div class="field col-md-3">
          <%= f.label "Song: " %><br>
          <%= f.text_field :song %>
        </div>
        <div class="field col-md-3">
          <%= f.label "Artist: " %><br>
          <%= f.text_field :artist %>
        </div>
        <div class="field col-md-6">
          <%= f.label "Album: " %><br>
          <%= f.text_field :album %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-2">
          <%= button_tag(type: 'submit', class: "btn btn-success") do %>
            Save Edits
          <% end %>
        </div>

      </div>
    <% end %>
    
      
