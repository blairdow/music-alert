<h1 class='text-center'>Edit a music!</h1>

<div class="row">
    <div class="col-sm-10 col-md-7 col-md-offset-2">
    
    <%= form_for @medium, url: user_medium_path(@medium.user_id, @medium), method: :patch, html: { class: 'form-horizontal' } do |f| %>
         
        <div class="form-group">
            <%= f.label "Song: ", class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_field :song, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label "Artist: ", class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_field :artist, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label "Album: ", class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_field :album, class: 'form-control' %>
            </div>
        </div>

        
        <br>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= button_tag(type: 'submit', class: "btn btn-block btn-info") do %>
                    Save Edits
                <% end %>
            </div>
        </div>
        
        <!--LINK TO cancel-->
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type='button' class='btn btn-block btn-default btn-xs login-link'>
                    <%= link_to 'Cancel', user_path(current_user.id) %>
                </button>
            </div>
        </div>
        
    <% end %>
    
    </div>
</div>
      
