<div class="wrapper">
<% if @media_type == 'song' %>
   
      <%= form_for [@user, @medium] do |f| %>
       <div class="field form-group">
            <%= f.label "Song: " %>
            <%= f.text_field :song %>
        </div>
         <% @medium.errors.full_messages.each do |message| %>
             <p class="text-danger"><strong><%= message %></strong></p>
         <% end %>
          
         <div class="field form-group">
            <%= f.label "Artist: " %>
            <%= f.text_field :artist %>   
         </div> 
           <div class="field form-group">
            <%= f.label "Album: " %>
            <%= f.text_field :album %>
        </div>
       
            <%= button_tag(type: 'submit', class: "btn btn-success") do %>
              <i class="icon-ok icon-white"></i> Submit
            <% end %>
      <% end %>
<% end %>

<% if @media_type == 'artist' %>
    <div>
      <%= form_for [@user, @medium] do |f| %>
            <div class="field form-group">
                <%= f.label "Artist: " %>
                <%= f.text_field :artist %>
            </div>
            
             <%= button_tag(type: 'submit', class: "btn btn-success") do %>
              <i class="icon-ok icon-white"></i> Submit
            <% end %>
   
      <% end %>
  
<% end %>

<% if @media_type == 'album' %>
      <%= form_for [@user, @medium] do |f| %>
            <div class="field form-group">
                <%= f.label "Artist: " %>
                <%= f.text_field :artist %>
            </div>
            <div class="field form-group">
                <%= f.label "Album: " %>
                <%= f.text_field :album %>
            </div>
            <%= button_tag(type: 'submit', class: "btn btn-success") do %>
              <i class="icon-ok icon-white"></i> Submit
            <% end %>
 
      <% end %>
<% end %>
